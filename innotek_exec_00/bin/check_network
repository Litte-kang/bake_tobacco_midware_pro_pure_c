#!/bin/ash

while true
do
	ps w | grep stalled | grep -v grep | awk '{print $1}'

	if [ $? != 0 ]
	then
		pid=`ps w | grep wget | grep -v grep | awk '{print $1}'`

		echo "kill wget"
		echo "kill -9 "$pid
		kill -9 $pid

		break
	fi

	ifconfig 3g-wan >> /dev/null
	if [ $? != 0 ]
	then
		pid=`ps w | grep wget | grep -v grep | awk '{print $1}'`

		echo "kill wget"
		echo "kill -9 "$pid
		kill -9 $pid

		break
	fi

	sleep 5

done